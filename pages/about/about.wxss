.container {
  min-height: 100vh;
  position: relative;
  padding: 30rpx;
}

.bg-image {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: brightness(0.6);
}

.content-wrapper {
  animation: fadeIn 1s ease;
}

.header {
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 60rpx;
}

.team-title {
  font-size: 44rpx;
  color: #fff;
  font-weight: bold;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.team-num {
  font-size: 34rpx;
  color: rgba(255,255,255,0.9);
  margin-top: 20rpx;
  display: block;
}

.divider {
  width: 120rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #fff, transparent);
  margin: 30rpx auto;
}

.team-container {
  padding: 20rpx;
}

.members-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-top: 30rpx;
}

.member-card {
  background: rgba(255,255,255,0.15);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  padding: 30rpx;
  transition: transform 0.3s ease;
  border: 1rpx solid rgba(255,255,255,0.2);
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.member-card:active {
  transform: scale(0.98);
}

.leader {
  background: linear-gradient(135deg, rgba(255,255,255,0.25), rgba(255,255,255,0.15));
  grid-column: 1 / -1;
  border: 2rpx solid rgba(255,255,255,0.3);
}

.role {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.role-text {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
}

.role-icon {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name {
  font-size: 34rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.id {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

.contact {
  text-align: center;
  margin-top: 80rpx;
  padding: 40rpx 0;
}

.contact-title {
  font-size: 34rpx;
  color: #fff;
  margin-bottom: 30rpx;
  display: block;
  font-weight: bold;
}

.email-container {
  display: flex;
  color: #fff;
}