/**about.wxss**/
.about {
    padding: 25% 5%;
    color: rgb(255, 255, 255);
    line-height: 2.0rem;
}

.about text {
    display: block;
    line-height: 1.5rem;
}

.aboutme {
    text-align: left;
    padding: 35px 15px;
}

.aboutme .title {
    color: rgb(255, 255, 255);
}

image {
    position: absolute;
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 100vh;
    z-index: -999;
}