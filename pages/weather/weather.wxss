/**weather.wxss**/

.bj{
    position: absolute;
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 100vh; 
    z-index: -999;
    position: fixed;
}
/*城市信息*/
.city {padding: 5% 5%; overflow: hidden;}
.city .dwicon{ width: 40rpx; height: 40rpx; float: left; margin: 5px;}
.city text{font-size: 16px; color: #666; float: left; margin: 5px;}
.city .update{ float: right; width: 150px;}

/*天气预报*/
.weather{overflow: hidden;color: rgb(2, 3, 3); padding: 5%; }
.weather .section{ float: left; width: 100px; height: 100px; display: block; }
.weather .aside{ float: right; width:40%; margin-top: 5%; font-size: 12px; }
.weather .aside .temperature{ font-size: 36px; display: block;}
.weather .other{ clear:both; padding-top: 5%; display: flex; }
.weather .other view{ flex:1; text-align: center; }
.weather .other .border_r{ border-right: solid 1px #bbd; }
.weather .other .title{font-size: 12px; color: rgb(2, 3, 3); }
.weather .other .info{ display: block; padding-top: 5%; }

/*生活指数*/
.suggestion{ margin-top: 5%;}
.suggestion .title{ display: block; padding: 3% 5%; background: #58b; color: #fff;}
.suggestion .list{ display: flex; font-size: 12px; margin-top: 1px; }
.suggestion .list_l{ flex: 1; text-align: center; color: rgb(2, 3, 3); padding: 8px;}
.suggestion .list_l image{ width:30px; height: 30px; display: block; margin: 0 auto;}
.suggestion .list_r{ flex: 4; padding: 8px; color: rgb(2, 3, 3);}
.suggestion .list_t{ font-size: 14px; display: block; margin-bottom: 5px; color: rgb(2, 3, 3);}