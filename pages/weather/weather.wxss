.bj {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100vh;
  z-index: -999;
  position: fixed;
}

/*城市信息*/
.city {
  padding: 5% 5%;
  overflow: hidden;
}

.city .dwicon {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 5px;
}

.city text {
  font-size: 16px;
  color: #666;
  float: left;
  margin: 5px;
}

.city .update {
  display: flex
}

/*天气预报*/
.weather {
  overflow: hidden;
  color: rgb(2, 3, 3);
  padding: 5%;
}

.weather .section {
  float: left;
  width: 100px;
  height: 100px;
  display: block;
}

.weather .aside {
  float: right;
  width: 40%;
  margin-top: 5%;
  font-size: 12px;
}

.weather .aside .temperature {
  font-size: 36px;
  display: block;
}

.weather .other {
  clear: both;
  padding-top: 5%;
  display: flex;
}

.weather .other view {
  flex: 1;
  text-align: center;
}

.weather .other .border_r {
  border-right: solid 1px #bbd;
}

.weather .other .title {
  font-size: 12px;
  color: rgb(2, 3, 3);
}

.weather .other .info {
  display: block;
  padding-top: 5%;
}

.card-modular {
  margin: 20rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
}

.card-modular .title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.card-wrap {
  display: flex;
  overflow-x: auto;
  padding: 10rpx 0;
}

.item {
  flex-shrink: 0;
  text-align: center;
  padding: 20rpx;
}

.item.hourly {
  width: 140rpx;
}

.item.daily {
  width: 180rpx;
}

.item .icon {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx 0;
}

.text-gray {
  color: #666;
  font-size: 24rpx;
}

.text-primary {
  color: #333;
  font-size: 28rpx;
}

.mb-32 {
  margin-bottom: 32rpx;
}