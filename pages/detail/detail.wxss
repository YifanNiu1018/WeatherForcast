/* WXSS */
.weather-detail {
  padding: 16rpx;
  background-color: #ffffff;
}

.obs-time {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.temperature {
  font-size: 48rpx;
  color: #ff6600;
  margin-bottom: 8rpx;
}

.feels-like {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.weather-main {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.weather-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.weather-text {
  font-size: 32rpx;
  color: #333333;
}

.wind-info, .additional-info {
  margin-bottom: 16rpx;
}

.wind-info text, .additional-info text {
  display: block;
  font-size: 28rpx;
  color: #555555;
  margin-bottom: 4rpx;
}