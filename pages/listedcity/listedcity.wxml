<view class="container">
<image class="bj" src="../../images/cityPage/1.png"></image>

  <view class="title">天气</view>
  <view class="search-bar">
    <input class="search-input" placeholder="搜索城市" bindinput="onSearchInput" bindconfirm="onSearchConfirm" />
    <button class="search-button" bindtap="onSearchClick">搜索</button>
  </view>

  <view class="city-list">
  <block wx:for="{{cities}}" wx:key="index">
    <view class="city-item">
      <text class="city-name">{{item.name}}</text>
      <text class="city-weather">{{item.weather}}</text>
      <button class="delete-button" bindtap="onDeleteCity" data-city="{{item.name}}">删除</button>
    </view>
  </block>
</view>
</view>
