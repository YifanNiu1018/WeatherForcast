.bj {
    position: absolute;
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 100vh;
    z-index: -999;
    position: fixed;
}

.container {
    padding: 20px;
}

.title {
    font-size: 30px;
    text-align: center;
    margin-bottom: 20px;
    font-weight: bold;
    color: #333;
}

.search-bar {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.search-input {
    flex: 1;
    height: 20px;
    padding: 5px;
    border: 1px solid #ddd;
    border-radius: 10px;
    margin-right: 10px;
    font-size: 12px;
    background-color: rgba(255, 255, 255, 0.7);
    box-shadow: inset 0 2px 3px rgba(0, 0, 0, 0.1);
}

.search-button {
    height: 35px;
    padding: 0 15px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 12px;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    transition: all 0.3s;
}

.search-button:hover {
    background-color: #45a049;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
}

.city-list {
    margin-top: 20px;
}

.city-item {
    display: flex;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 15px;
    border-radius: 10px;
    margin-bottom: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s, box-shadow 0.3s;
}

.city-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
}

.city-name {
    flex: 1;
    font-size: 18px;
    font-weight: bold;
    color: #333;
}

.city-weather {
    margin-right: 20px;
    color: #666;
    font-size: 16px;
}

.delete-button {
    background-color: #FF5733;
    color: white;
    border: none;
    border-radius: 0 10px 10px 0;
    height: 100%;
    padding: 0 20px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
}

.delete-button:hover {
    background-color: #e0472d;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
}